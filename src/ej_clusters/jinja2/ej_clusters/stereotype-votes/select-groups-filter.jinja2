<form method="GET" id="stereotype-filter" class="groups-filter">
    <div class="groups-filter__container">
        {% for group in groups %}
            {% if groups[group]|int == stereotype.id %}
                <button class="groups-filter__group groups-filter--selected" type="submit" id="{{ group }}" value="{{ groups[group] }}" name="stereotype-select">{{ group }}</button>
            {% else %}
                <button class="groups-filter__group" type="submit" id="{{ group }}" value="{{ groups[group] }}" name="stereotype-select">{{ group }}</button>
            {% endif %}
        {% endfor %}
    </div>
</form>