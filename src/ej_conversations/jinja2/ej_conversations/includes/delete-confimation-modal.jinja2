<div class="modal__overlay hide" id="delete-modal">
    <div class="modal__container">
        <form method="post" class="modal__container--quick-action">
            {{csrf_input }}
            <h3 class="bold">{{_("Are you sure?")}}</h3>
            <span>{{_("Deleted conversations cannot be recovered")}}</span>

            <div class="modal__btn-alternative">
                <button type="button"class="modal__btn-alternative--gray" onclick="closeModal()">
                    {{_("Return")}}
                </button>
                <button type="submit" class="modal__btn-alternative--red"
                    formaction="{{ conversation.patch_url('conversation:delete') }}">
                    {{_("Delete")}}
                </button>
            </div>
        </form>
    </div>
</div>
<script>
    function closeModal() {
        const modal = $('#delete-modal');
        const body = $("body").removeClass('modal--hide-overflow-y');
        modal.addClass('hide');
        modal.removeClass('form-modal-delete-show');
    }

    function showConfirmationDelete() {
        const modal = $('#delete-modal');
        const body = $("body").addClass('modal--hide-overflow-y')
        modal.addClass('form-modal-delete-show');
        modal.removeClass('hide');
    }
</script>
